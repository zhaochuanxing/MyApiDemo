<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Main theme color-->
        <!-- your app branding color for the app bar app的标题栏或者说actionbar栏-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- dark variant for the status bar and contextual app bars 系统的状态栏-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- radio box check box edit text line color-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/navig</item>
    </style>

    <style name="text_search">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/shape_tip</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
