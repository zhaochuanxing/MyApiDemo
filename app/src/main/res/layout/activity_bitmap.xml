<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xing.apidemo.aty.BitmapActivity">

    <ImageView
        android:id="@+id/img_origin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/img_new"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="92dp"
        android:src="@drawable/card_history"
        app:layout_constraintStart_toStartOf="@+id/img_origin"
        app:layout_constraintTop_toBottomOf="@+id/img_origin"/>
</android.support.constraint.ConstraintLayout>
